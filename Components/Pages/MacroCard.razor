@using CryptoMonitor.Models
@using CryptoMonitor.Services
@inject ILanguageService Lang

@if (Insight != null)
{
    <section class="glass-card mb-5">
        <div class="row">
            <div class="col-md-8">
                <h3 class="text-accent mb-3"><i class="bi bi-globe"></i> @Lang.T("MacroTitle")</h3>
                <p>@Insight.GlobalContext</p>
                
                <div class="fng-container mt-4 mb-4">
                    <div class="small text-secondary mb-2 text-uppercase fw-bold letter-spacing-1">Fear & Greed Index</div>
                    <div class="d-flex align-items-center gap-3">
                        <div class="fng-value @GetFnGClass(Insight.FearAndGreedLabel)">@Insight.FearAndGreedValue</div>
                        <div>
                            <div class="fw-bold fs-5 @GetFnGClass(Insight.FearAndGreedLabel)">@Insight.FearAndGreedLabel</div>
                            <div class="small text-secondary">Market Sentiment</div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <span class="badge bg-primary me-2">@Lang.T("DailyOutlook")</span>
                    <small>@Insight.DailyOutlook</small>
                </div>
            </div>
            <div class="col-md-4 border-start border-secondary ps-4">
                <h4 class="mb-3">@Lang.T("KeyIndicators")</h4>
                @foreach (var metric in Insight.KeyMetrics)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-secondary">@metric.Key</span>
                        <span class="fw-bold">@metric.Value</span>
                    </div>
                }
            </div>
        </div>
    </section>
}

@code {
    [Parameter] public MacroInsight? Insight { get; set; }

    private string GetFnGClass(string label) => label?.ToLower() switch
    {
        var l when l.Contains("extreme fear") => "fng-extreme-fear",
        var l when l.Contains("fear") => "fng-fear",
        var l when l.Contains("greed") && l.Contains("extreme") => "fng-extreme-greed",
        var l when l.Contains("greed") => "fng-greed",
        _ => "fng-neutral"
    };
}
