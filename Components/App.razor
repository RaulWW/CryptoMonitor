        window.getCountryCode = async () => {
            try {
                const response = await fetch('https://ipapi.co/json/');
                const data = await response.json();
                return data.country_code;
            } catch (e) {
                console.warn("Language detection by IP failed, defaulting to ENG.");
                return "US";
            }
        };
